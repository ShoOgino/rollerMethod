    /** Return URL to the Wiki page for a weblog entry, spacey style */    public String makeSpacedWikiLink( WeblogEntryData wd, String prefix )    {        StringBuffer sb = new StringBuffer();        StringTokenizer toker = new StringTokenizer(wd.getAnchor(),"_");        while ( toker.hasMoreTokens() )        {            sb.append( toker.nextToken() );            if ( toker.hasMoreTokens() ) sb.append("%20");        }        return mWikiEngine.getBaseURL()+"Wiki.jsp?page="+prefix+sb.toString();    }
