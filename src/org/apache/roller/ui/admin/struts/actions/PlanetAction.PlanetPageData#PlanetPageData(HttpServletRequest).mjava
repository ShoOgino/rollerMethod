        public PlanetPageData(HttpServletRequest req) throws RollerException
        {
           mRequest = req;
           Roller roller = RollerFactory.getRoller(); 
           PlanetConfigData cfg = roller.getPlanetManager().getConfiguration();
           if (cfg != null)
           {
               mTitle = cfg.getTitle();
               mDescription = cfg.getDescription();
           }
        }

