    public Date getLastRun(RollerTask task) {
        
        Date lastRun = null;
        
        try {
            TaskLockData taskLock = this.getTaskLockByName(task.getName());
            if(taskLock != null) {
                lastRun = taskLock.getLastRun();
            }
        } catch (RollerException ex) {
            log.warn("Error getting TaskLockData", ex);
        }
        
        return lastRun;
    }

