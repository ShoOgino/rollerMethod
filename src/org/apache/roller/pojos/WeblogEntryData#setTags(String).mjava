    public void setTags(String tags) throws RollerException {
        if (tags == null) {
            tagSet.clear();
            return;
        }

        String[] tagsarr = StringUtils.split(tags, ' ');

        if (tagsarr == null || tagsarr.length == 0) {
            tagSet.clear();
            return;
        }

        updateTags(Arrays.asList(tagsarr));
    }

