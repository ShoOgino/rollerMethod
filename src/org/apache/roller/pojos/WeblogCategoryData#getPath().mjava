    /**
     * Get path in category hierarhcy.
     *
     * @roller.wrapPojoMethod type="simple"
     */
    public String getPath()
    {
        if (null == cachedPath)
        {
            try
            {
                cachedPath = RollerFactory.getRoller().getWeblogManager().getPath(this);
            }
            catch (RollerException e)
            {
                throw new RuntimeException(e);
            }
        }
        return cachedPath;
    }

