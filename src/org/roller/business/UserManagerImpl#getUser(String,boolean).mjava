    public UserData getUser(String userName, boolean enabledOnly) throws RollerException
    {
        if (userName==null )
            throw new RollerException("userName is null");
        
        WebsiteData website = getWebsite(userName, enabledOnly);
        if (website != null)
        {
            return website.getUser();
        }
        return null;
    }

