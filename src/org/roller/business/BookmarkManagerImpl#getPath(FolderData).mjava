    public String getPath(FolderData folder) throws RollerException
    {
        if (null == folder.getParent())
        {
            return new String("/");
        }
        else
        {
            String parentPath = getPath(folder.getParent());
            parentPath = "/".equals(parentPath) ? "" : parentPath;
            return parentPath + "/" + folder.getName();
        }
    }

