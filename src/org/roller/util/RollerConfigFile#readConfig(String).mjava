    /**     * Read the RollerConfig from a file, as specified by a String path.     *     * @param path     *     * @return     */    public static RollerConfigFile readConfig( String path )    {        InputStream in = null;        try        {            in = new FileInputStream( path );            return RollerConfigFile.readConfig( in );        }        catch ( Exception e )        {            System.out.println( "Exception reading RollerConfig: " +                                e.getMessage() );        }        finally        {            try            {                if ( in != null )                {                    in.close();                }            }            catch ( java.io.IOException ioe )            {                System.err.println( "RollerConfig.writeConfig() unable to close InputStream" );            }        }        return new RollerConfigFile();    }
