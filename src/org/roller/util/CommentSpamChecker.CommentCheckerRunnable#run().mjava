        public void run()        {            try            {                // by using the OR conditional it'll test each                // one in order and fall into the body without                // having to test each and every condition.                // Not sure which is the optimal order to check, though.                boolean isSpam = blacklist.isBlacklisted(mComment.getUrl());                isSpam = blacklist.isBlacklisted(mComment.getContent()) ? true : isSpam;                isSpam = blacklist.isBlacklisted(mComment.getEmail()) ? true : isSpam;                if (isSpam)                {                    mComment.setSpam(Boolean.TRUE);                    mComment.save();                    RollerFactory.getRoller().commit();                }            }            catch (Exception e)            {                mLogger.error("Processing Comment",e);            }            finally            {                RollerFactory.getRoller().release();            }        }
