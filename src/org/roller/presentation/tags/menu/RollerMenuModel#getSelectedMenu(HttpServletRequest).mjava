	public Menu getSelectedMenu( HttpServletRequest req )
	{
		MenuImpl def = null;
		MenuImpl selected = null; 
		for ( int i=0; i<mMenus.size(); i++ ) 
		{
			MenuImpl menu = (MenuImpl)mMenus.elementAt(i);
			if ( menu.isSelected( req ) )
			{
				selected = menu;
				break;
			}
			if ( menu.isDefault() )
			{
				def = menu;
			}
		}
		if ( selected != null )
		{
			return selected;
		}
		else
		{
			return def;

		}
	}

