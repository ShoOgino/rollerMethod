    /**
     * Return the real filepath to the theme.
     *
     * @param theme
     * @return String
     */
    public String getThemePath(String theme)
    {
        String themespath = RollerRuntimeConfig.getProperty("users.themes.path");

        // Figure path to new user theme
        return mContext.getRealPath(
            "/" + themespath + "/" + theme);
    }

