    /** Encapsulates BookmarkManager.getFolder() */
    public FolderData getFolder(String folderPath)
    {
        try
        {
            return mBookmarkMgr.getFolder(
                mWebsite, folderPath);
        }
        catch (RollerException e)
        {
            mLogger.error("PageModel getFolder()", e);
        }
        return null;
    }

