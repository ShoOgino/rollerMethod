    /** Get top level bookmark folders. */
    public Collection getTopLevelFolders()
    {
        Collection tops = null;
        try
        {
            tops = mBookmarkMgr.getRootFolder(
                    mUserMgr.getWebsiteByHandle(mHandle)).getFolders();
        }
        catch (RollerException e)
        {
            tops = new ArrayList();
        }
        return tops;
    }

