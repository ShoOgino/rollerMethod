    public FolderDataWrapper getFolderByPath(String path)
    {
        try
        {
            FolderData folder = mBookmarkMgr.getFolderByPath(
                mWebsite, null, path);
            
            if(folder != null)
                return FolderDataWrapper.wrap(folder);
        }
        catch (RollerException e)
        {
            mLogger.error(e);
        }
        
        return null;
    }

