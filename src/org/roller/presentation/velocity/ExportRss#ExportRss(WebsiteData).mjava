    public ExportRss(WebsiteData website) throws Exception    {        Properties props = new Properties();        props.load(RollerContext.getServletContext().                   getResourceAsStream("/WEB-INF/velocity.properties"));        ve = new VelocityEngine();        ve.info("*******************************************");        ve.info("Initializing VelocityEngine for ExportRss");        ve.init( props );        ve.info("Done initializing VelocityEngine for ExportRss");        ve.info("************************************************");                ctx = new VelocityContext();                user = website.getUser();        RollerContext rollerCtx = RollerContext.getRollerContext(                                      RollerContext.getServletContext());        loadPageHelper();                loadDates(website);                loadWebsiteInfo(rollerCtx, website);        loadTheRest(rollerCtx);    }
