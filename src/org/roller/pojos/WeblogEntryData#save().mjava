    /** 
     * @see org.roller.pojos.PersistentObject#save()
     */
    public void save() throws RollerException
    {
        // If no anchor then create one
        if (getAnchor()==null || getAnchor().trim().equals(""))
        {
            setAnchor(createAnchor());
        }
        super.save();
    }

