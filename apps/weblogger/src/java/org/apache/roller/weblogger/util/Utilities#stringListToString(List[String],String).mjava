    /** Convert string array to string with delimeters. */
    public static String stringListToString(List<String> stringList, String delim) {
        String ret = "";
        for (String s : stringList) {
            if (ret.length() > 0)
                ret = ret + delim + s;
            else
                ret = s;
        }
        return ret;
    }

