    public FolderDataWrapper getFolderByPath(String path) {
        try {
            WeblogBookmarkFolder folder = mBookmarkMgr.getFolder(mWebsite, path);
            
            if(folder != null)
                return FolderDataWrapper.wrap(folder);
        } catch (WebloggerException e) {
            mLogger.error(e);
        }
        
        return null;
    }

