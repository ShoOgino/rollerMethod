    /**
     * Gets the date specified by the request
     * @param orToday If no date specified, then use today's date.
     * @return Date
     */
    public Date getDate( boolean orToday )
    {
        Date ret = null;
        if ( mDate != null )
        {
            ret = mDate;
        }
        else if ( orToday )
        {
            ret = getToday();
        }
        return ret;
    }

