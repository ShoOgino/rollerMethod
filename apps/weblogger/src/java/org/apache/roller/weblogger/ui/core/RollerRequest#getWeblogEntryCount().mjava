    public int getWeblogEntryCount()
    {
        // Get count of entries to return, or 20 if null
        int count = 20;
        if ( mRequest.getParameter("count") != null )
        {
            count= Utilities.stringToInt(mRequest.getParameter("count"));
            if ( count==0 || count>50 )
            {
                count = 20;
            } 
        } 
        return count; 
    }         

