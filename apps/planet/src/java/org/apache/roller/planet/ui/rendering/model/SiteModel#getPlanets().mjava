    /**
     * Get the list of all planets.
     */
    public List getPlanets() {
        PlanetManager pMgr = PlanetFactory.getPlanet().getPlanetManager();
        try {
            return pMgr.getPlanets();
        } catch(Exception e) {
            log.error("Error getting planets list", e);
        }
        
        return null;
    }

