    /**
     * Delete a ping target (load delete confirmation view).
     */
    public String deleteConfirm() {
        
        if(getPingTarget() != null) {
            setPageTitle("pingTarget.confirmRemoveTitle");
            
            return "confirm";
        } else {
            // TODO: i18n
            addError("Cannot delete ping target: " + getPingTargetId());
        }
        
        return LIST;
    }

