    public void execute() throws BuildException
    {
        if (database != null) {
            Thread server = new Thread() {
                public void run() {
                    System.out.println("Starting HSQLDB");
                    String[] args = { 
                        "-database", database,
                        "-port", port,
                        "-no_system_exit", "true" };
                    Server.main(args);
                }
            };
            server.start();
        }
        try {Thread.sleep(2000);} catch (Exception ignored) {}
    }

